<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.wellbeings.anatome.PreambleCarousel"
    android:background="@color/main_main_bg"
    android:weightSum="1">

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/carousel_back_button"
        android:text="@string/back"
        android:background="#00ffffff"
        android:clickable="true"
        android:contextClickable="true"
        android:focusable="true"
        android:singleLine="true"
        android:textColor="@color/main_accent_text"
        android:textSize="25dp"
        android:layout_weight=".125" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight=".75"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/tabs">
    </LinearLayout>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/carousel_forward_button"
        android:text="@string/forward"
        android:background="#00ffffff"
        android:clickable="true"
        android:contextClickable="true"
        android:focusable="true"
        android:singleLine="true"
        android:textColor="@color/main_accent_text"
        android:textSize="25dp"
        android:layout_weight=".125" />

</LinearLayout>
