<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/main_main_bg">

    <android.support.v4.view.ViewPager
        android:id="@+id/preamble_carousel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:context="io.wellbeings.anatome.Preamble"
        android:layout_above="@+id/carousel_fragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.v4.view.ViewPager>

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:name="io.wellbeings.anatome.PreambleCarousel"
        android:id="@+id/carousel_fragment"
        tools:layout="@layout/fragment_preamble_carousel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>